# Define a helper to require scripts from node_modules
def node_require(script)
  require Pod::Executable.execute_command('node', ['-p',
    "require.resolve(
      '#{script}',
      {paths: [process.argv[1]]},
    )", __dir__]).strip
end

# Require React Native's scripts
node_require('react-native/scripts/react_native_pods.rb')

# Require React Native Permissions' setup script
node_require('react-native-permissions/scripts/setup.rb')

platform :ios, '15.1'
prepare_react_native_project!

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

target 'ieltshunter' do
  config = use_native_modules!

  # --- PERMISSIONS SETUP ---
  # Only uncomment the permissions you actually need
  setup_permissions([
    'Camera',
    'PhotoLibrary',
    'PhotoLibraryAddOnly', # Required if you want to save photos to gallery
  ])
  # -------------------------

  # Firebase Pods
  pod 'GoogleUtilities', :modular_headers => true
  pod 'nanopb', :modular_headers => true
  pod 'GoogleDataTransport', :modular_headers => true
  pod 'FirebaseCore', :modular_headers => true
  pod 'FirebaseInstallations', :modular_headers => true

  use_react_native!(
    :path => config[:reactNativePath],
    :hermes_enabled => true,
    :new_arch_enabled => true,
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  target 'ieltshunterTests' do
    inherit! :complete
  end

  post_install do |installer|
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false
    )
  
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.1'
        config.build_settings['SWIFT_VERSION'] = '5.0'
        config.build_settings['OTHER_SWIFT_FLAGS'] ||= ['$(inherited)']
        if target.name == 'react-native-iap'
          config.build_settings['OTHER_SWIFT_FLAGS'] << '-DSTOREKIT2_ENABLED'
        end
      end
    end
  end
end